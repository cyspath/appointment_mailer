<p id="notice"><%= notice %></p>

<h1>Listing Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th></th>
      <th>Time</th>
      <th>Patient ID</th>
      <th>Patient Name</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.date.strftime("%a") %></td>
        <td><%= appointment.date.strftime("%b %d, %Y ") %></td>
        <td><%= appointment.time.strftime("%I:%M%p") %></td>
        <td><%= appointment.patient_id %></td>
        <td><%= appointment.patient.first_name + " " + appointment.patient.last_name %></td>
        <td><%= appointment.location %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

