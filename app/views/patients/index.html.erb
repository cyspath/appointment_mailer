<p id="notice"><%= notice %></p>

<h1>Listing Patients</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.first_name %></td>
        <td><%= patient.last_name %></td>
        <td><%= patient.email %></td>
        <!-- <td><%= link_to 'Show', patient %></td> -->
        <td><%= button_to "Edit Info", edit_patient_path(patient), :class => "button", :method => :get  %></td>
        <td><%= button_to 'Delete', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= button_to "Send Reminder", patient, :class => "button", :method => :get  %></td>

      </tr>
    <% end %>
  </tbody>
</table>

